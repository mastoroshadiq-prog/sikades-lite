#--------------------------------------------------------------------
# SIKADES LITE - Environment Configuration for Supabase
#--------------------------------------------------------------------
# Copy this file to .env and update the values

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'http://localhost:8080/'

#--------------------------------------------------------------------
# DATABASE - SUPABASE PostgreSQL
#--------------------------------------------------------------------
# Get these values from your Supabase project:
# Project Settings > Database > Connection string

database.default.hostname = 'db.YOUR_PROJECT_ID.supabase.co'
database.default.database = 'postgres'
database.default.username = 'postgres'
database.default.password = 'YOUR_SUPABASE_PASSWORD'
database.default.DBDriver = 'Postgre'
database.default.DBPrefix = ''
database.default.port = 5432

# For SSL connection (required for Supabase)
database.default.sslmode = 'require'

#--------------------------------------------------------------------
# SUPABASE API (Optional - for direct API calls)
#--------------------------------------------------------------------

# supabase.url = 'https://YOUR_PROJECT_ID.supabase.co'
# supabase.anon_key = 'YOUR_ANON_KEY'
# supabase.service_key = 'YOUR_SERVICE_KEY'

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
session.savePath = WRITEPATH . 'session'

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------

# Generate with: php spark key:generate
# encryption.key = ''

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

logger.threshold = 4
