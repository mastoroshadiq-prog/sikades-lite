# Template untuk environment variables di Cloud Run
# Copy ini ke Secret Manager atau set sebagai environment variables

# Application
CI_ENVIRONMENT=production
app.baseURL=https://your-cloudrun-url.a.run.app

# Database (Supabase)
database.default.hostname=aws-0-ap-southeast-1.pooler.supabase.com
database.default.database=postgres
database.default.username=postgres.YOUR_PROJECT_REF
database.default.password=YOUR_SUPABASE_PASSWORD
database.default.DBDriver=Postgre
database.default.port=6543

# Session
app.sessionDriver=CodeIgniter\Session\Handlers\DatabaseHandler
app.sessionSavePath=ci_sessions

# Security
app.CSRFProtection=true
app.CSRFTokenName=csrf_token
app.CSRFHeaderName=X-CSRF-TOKEN
app.CSRFCookieName=csrf_cookie
app.CSRFExpire=7200
app.CSRFRegenerate=true
